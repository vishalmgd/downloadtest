<!DOCTYPE html>
<html lang="en">
  <!-- headtag -->
  <%- include('./layouts/headtag.ejs'); %>

  <meta
    name="description"
    content="Create new blog so that people can be benifitted from your ideas, fast speeds, and user-friendly interface."
  />
  <meta name="keywords" content="Blog, Ideas, Innovation" />
  <meta name="robots" content="index, follow" />

  <title>Create new blog</title>
  <body>
    <!-- Navigation-->
    <%- include('./layouts/navbar.ejs'); %>
    <!-- Page Header-->
    <%- include('./layouts/header.ejs'); %>

    <!-- Main Content below -->
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <!-- Post preview-->

          <h1>Create new Post here</h1>

          <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
              <div class="col-12">
                <!-- <div class="col-md-10 col-lg-8 col-xl-7"> -->
                <form
                  action="/post/data"
                  method="POST"
                  enctype="multipart/form-data"
                >
                  <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01"
                      >Choose Category</label
                    >
                    <select
                      name="category"
                      class="form-select"
                      id="inputGroupSelect01"
                    >
                      <option selected>General</option>
                      <option value="1">Art and design blogs</option>
                      <option value="2">Computer science and Technology</option>
                      <option value="3">Political blogs</option>
                      <option value="4">Movie blogs</option>
                      <option value="5">Sports blogs</option>
                      <option value="6">Business blogs</option>
                      <option value="7">Personal finance blogs</option>
                      <option value="8">Blockchain & Cryptocurrency</option>
                      <option value="9">Food Blog</option>
                      <option value="9">Travel Blog</option>
                      <option value="10">Other</option>
                    </select>
                  </div>

                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>Title</label>
                      <input
                        type="text"
                        name="title"
                        placeholder="Title"
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>Username</label>
                      <input
                        type="text"
                        name="username"
                        placeholder="Username"
                        class="form-control"
                        value="<%= sessionData%>"
                        readonly
                        required
                      />
                    </div>
                  </div>
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>Description</label>
                      <input
                        type="text"
                        name="description"
                        placeholder="Description"
                        required
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>Content</label>
                      <textarea
                        name="content"
                        required
                        placeholder="Content ..."
                        cols="30"
                        rows="10"
                        class="form-control"
                        style="white-space: pre-wrap"
                      ></textarea>
                    </div>
                  </div>
                  <!-- <div class="form-group mt-3">
                    <input type="file" name="image" class="form-control-file" />
                  </div> -->
                  <div class="form-group my-4 text-center">
                    <input
                      type="submit"
                      value="Submit"
                      class="btn btn-primary btn-xl"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Divider-->
          <hr class="my-4" />
          <!-- Pager-->
          <!-- <div class="d-flex justify-content-end mb-4">
            <a class="btn btn-primary text-uppercase" href="#!"
              >Older Posts â†’</a
            >
          </div> -->
        </div>
      </div>
    </div>

    <!-- Footer-->
    <%- include('./layouts/footer.ejs'); %>
    <!-- Bootstrap core JS-->
    <%- include('./layouts/scriptag.ejs'); %>
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"
  ></script>
  
  </body>
</html>
