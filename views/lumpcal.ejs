  <body>
    <%- include('./layouts/navbar.ejs'); %>
    <!-- Page Header-->
    <header
    id="backgroundforheader"
    class="masthead"
    style="background-image: url('https://source.unsplash.com/1920x1280/?life')"
  >
    <div class="container position-relative px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <div class="site-heading">
            <!-- <h1>Blogger Zone</h1>
            <span class="subheading">A Blog Theme by Vishnuji.com</span> -->
            <div
            class="d-flex flex-column justify-content-center align-items-center"
            style="margin-top: -6rem;"
          >
            <h2>Lumpsum Calculator</h2>
      
            <div class="container mt-5">
              
              <div className="card-body">
                <!-- <a href="/download1">Download</a> -->
      
                <form action="/lumpcal" method="POST">
                  <table style="margin-left: -40px;">
                    <tr>
                      <th>
                        <label for="monthlyInvestment">Lumpsum Amount:</label>
                      </th>
                      <td>
                        <input type="number" name="monthlyInvestment" min="0"  required style="width: 150px;">

                      </td>
                    </tr>
                    <tr>
                      <th>
                        <label for="investmentDuration">Investment Time <br> (in years):</label>
                      </th>
                      <td>
                        <input type="number" name="investmentDuration" min="0"  required style="width: 150px;">
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <label for="annualReturnRate">Annual Return Rate <br>(in %):</label>
                      </th>
                      <td>
                        <input type="number" name="annualReturnRate" step="0.1" min="0"  required style="width: 150px;">
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <label for="inflationRate">Inflation Rate <br> (in %):</label>
                      </th>
                      <td>
                        <br> 
                        <input type="number" name="inflationRate" min="0" step="0.1" title="Enter the inflation rate in percentage" style="width: 150px;">
                        
                        

                      </td>
                    </tr>
                    
                    <tr>
                      <td colspan="2" class="centered">
                        
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                      </td>
                    </tr>
                  </table>
                  <span style="line-height: 0.5;font-size: 15px">You can enter inflation rate if you desire to check wealth value after adjusting inflation. Average inflation of the last 10 years is 6%</span>
                  <!-- <text style="font-size: small; margin: 0; padding: 0;" name="text" id="" cols="30" rows="10">You can enter inflation rate if you desire to check wealth value after adjusting inflation. Average inflation of the last 10 years is 6%</text> -->
                
                </form>
              
        
                <% if (sentence) { %>
                  <h4 style="background-color: red;">Future Value: ₹ <%= sentence %> <br> <hr> Invested Amount: ₹ <%= investedAmount %> </h4>
                <% } %>
                <br>

                <% if (futureValues && futureValues.length > 0) { %>
                  <h4>future Values for same  ₹ <%= investedAmount %> , same ROR <%= annualReturnRate %> % & Inflation: <%= inflationRate %> %</h4>
                  <table >
                    <thead>
                      <tr>
                        <th>Investment Time </th>
                        <th>Future Value</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (let i = 0; i < futureValues.length; i++) { %>
                        <tr>
                          <td><%= investmentDurations[i] %> Years</td>
                          <td>₹ <%= formatNumberWithCommas(futureValues[i]) %></td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                <% } %>

         
              </div>
       
          </div>
      

          </div>
        </div>
      </div>
    </div>
  </header>

    
