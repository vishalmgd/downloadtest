

<!DOCTYPE html>
<html lang="en">
  <!-- headtag -->
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="Sign up for an account on our site and access all the features. Easy and secure registration process, user-friendly interface, and fast access.">
    <meta name="keywords" content="Sign up, account, register">
    <meta name="robots" content="noindex, nofollow">
  
    <title>Register page</title>
    
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    
    <link href="/css/styles.css" rel="stylesheet" />
  </head>

  <body>
    <!-- Navigation-->
    <%- include('./layouts/navbar.ejs'); %>
    <!-- Page Register-->
    
<!-- Page Header -->
<header class="masthead"
id="backgroundforheader"
style="background-image: url('https://source.unsplash.com/category/signup')"></header>

  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
          <h1>Create A New Account</h1>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <form action="/users/register" method="POST" encType="multipart/form-data">
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Username</label>
            <input type="text" name="username" placeholder="Username" class="form-control">
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Email</label>
            <input type="email" name="email" placeholder="Email" class="form-control">
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Password</label>
            <input type="password" name="password" placeholder="Password" class="form-control">
          </div>
        </div>
      
        <div class="form-group my-4 text-center">
          <button class="btn btn-primary">Register now</button>
        </div>
      </form>
    </div>
  </div>
</div>

    


    <!-- Footer-->
    <%- include('./layouts/footer.ejs'); %>
    <!-- Bootstrap core JS-->
    <%- include('./layouts/scriptag.ejs'); %>
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"
  ></script>
  
  </body>
</html>
